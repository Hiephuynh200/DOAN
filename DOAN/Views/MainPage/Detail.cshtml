@model DOAN.Models.SanPham

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <h4 class="text-center">Chi tiết Sản Phẩm</h4>
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Tên Sản Phẩm</th>
                <th scope="col">Mã Sản phẩm </th>
                <th scope="col">Loại SP</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Giá Bán</th>
                <th scope="col">Số Lượng</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.TenSP)</td>
                <td>@Html.DisplayFor(model => model.MaSP)</td>
                <td>@Html.DisplayFor(model => model.LoaiSanPham.TenLoai)</td>
                <td>
                    <img width="200" src="@Html.DisplayFor(model => model.HinhAnh)" alt="Alternate Text" />
                </td>
                <td>@Html.DisplayFor(model => model.GiaBan)</td>
                <td>@Html.DisplayFor(model => model.SoLuong) </td>
            </tr>
        </tbody>
    </table>
    <p>
        <a class="btn btn-success" style="padding:1rem 2rem" href="@Url.Action("Index", "MainPage", new {@strURL = Request.Url.ToString() })">Back to List</a>
</div>

