@model DOAN.Models.NhanVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Site.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">Tên Nhân viên</th>
                    <th scope="col">Mã Nhân viên </th>
                    <th scope="col">Số ĐT</th>
                    <th scope="col">Địa Chỉ</th>
                    <th scope="col">Email</th>
                    <th scope="col">Tài khoản</th>
                    <th scope="col">Mật khẩu</th>
                    <th scope="col">Chức vụ</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                        </div>
                    </td>

                    <td class="text-center">@Html.DisplayFor(model => model.MaNV)</td>
                    <td class="text-center">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </td>

                    <td class="text-center">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ChucVu.MaCV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ChucVu.MaCV, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Back to List", "LstNhanVien")
        </p>
    </div>
}

